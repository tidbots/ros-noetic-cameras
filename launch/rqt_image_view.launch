<launch>
  <!-- 表示したい画像トピック -->
  <arg name="image" default="/camera/image_raw"/>

  <!-- rqt_image_view はGUI。X11で起動 -->
  <node pkg="rqt_image_view" type="rqt_image_view" name="rqt_image_view" output="screen">
    <!-- プラグインに初期トピックを渡す -->
    <param name="image" value="$(arg image)"/>
  </node>
</launch>

