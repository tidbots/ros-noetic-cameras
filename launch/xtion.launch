<launch>
  <!-- outer namespace (device name) -->
  <arg name="name" default="xtion"/>
  <arg name="frame_id" default="xtion_link"/>

  <!-- rgbd_launch/openni2_launch 側の中核namespace -->
  <arg name="camera" default="camera"/>
  <arg name="rgb" default="rgb"/>

  <!-- calibration (camera_info_manager) -->
  <arg name="rgb_camera_info_url" default="file:///root/.ros/camera_info/xtion_rgb.yaml"/>
  <arg name="depth_camera_info_url" default="file:///root/.ros/camera_info/xtion_depth.yaml"/>

  <!-- 統一出力 -->
  <arg name="out_image" default="/camera/image_raw"/>
  <arg name="out_info"  default="/camera/camera_info"/>

  <!-- 入力（Xtion側の実トピック）: 必要なら compose から上書き -->
  <arg name="in_image" default="/xtion/camera/rgb/image_raw"/>
  <arg name="in_info"  default="/xtion/camera/rgb/camera_info"/>

  <group ns="$(arg name)">
    <!-- Xtion/OpenNI2 の標準構成 (rgbd_launch) -->
    <!-- ここは「元の xtion.launch」と同じ系統にしつつ、URLだけ差し替え -->
    <group ns="$(arg camera)">

      <arg name="manager" value="$(arg camera)_nodelet_manager" />
      <arg name="num_worker_threads" default="4" />
      <arg name="debug" default="false" />

      <include file="$(find rgbd_launch)/launch/includes/manager.launch.xml">
        <arg name="name" value="$(arg manager)" />
        <arg name="debug" value="$(arg debug)" />
        <arg name="num_worker_threads"  value="$(arg num_worker_threads)" />
      </include>

      <include file="$(find openni2_launch)/launch/includes/device.launch.xml">
        <arg name="manager"                         value="$(arg manager)" />
        <arg name="rgb_frame_id"                    value="$(arg frame_id)" />
        <arg name="depth_frame_id"                  value="$(arg frame_id)" />
        <arg name="rgb_camera_info_url"             value="$(arg rgb_camera_info_url)" />
        <arg name="depth_camera_info_url"           value="$(arg depth_camera_info_url)" />
        <arg name="rgb"                             value="$(arg rgb)" />
        <arg name="ir"                              value="ir" />
        <arg name="depth"                           value="depth" />
        <arg name="respawn"                         value="false" />
        <arg name="depth_registration"              value="false" />
        <arg name="color_depth_synchronization"     value="false" />
        <arg name="enable_reconnect"                value="true" />
        <arg name="serialnumber_as_name"            value="false" />
      </include>

      <include file="$(find rgbd_launch)/launch/includes/processing.launch.xml">
        <arg name="manager"                         value="$(arg manager)" />
        <arg name="rgb"                             value="$(arg rgb)" />
        <arg name="ir"                              value="ir" />
        <arg name="depth"                           value="depth" />
        <arg name="depth_registered"                value="depth_registered" />
        <arg name="depth_registered_filtered"       value="depth_registered_filtered" />
        <arg name="respawn"                         value="false" />
        <arg name="rgb_processing"                  value="true" />
        <arg name="debayer_processing"              value="true" />
        <arg name="ir_processing"                   value="false" />
        <arg name="depth_processing"                value="false" />
        <arg name="depth_registered_processing"     value="false" />
        <arg name="disparity_processing"            value="false" />
        <arg name="disparity_registered_processing" value="false" />
        <arg name="hw_registered_processing"        value="false" />
        <arg name="sw_registered_processing"        value="false" />
      </include>

    </group>
  </group>

  <!-- 統一トピックへ寄せる（muxは使わず、launch内でrelay） -->
  <node pkg="topic_tools" type="relay" name="relay_rgb_image" output="screen"
        args="$(arg in_image) $(arg out_image)"/>
  <node pkg="topic_tools" type="relay" name="relay_rgb_info" output="screen"
        args="$(arg in_info) $(arg out_info)"/>
</launch>
