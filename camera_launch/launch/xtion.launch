<launch>
  <arg name="name" default="xtion"/>
  <arg name="frame_id" default="xtion_link"/>

  <!-- openni2_launch の標準構成を利用 -->
  <group ns="$(arg name)">
    <include file="$(find openni2_launch)/launch/openni2.launch">
      <arg name="camera" value="$(arg name)"/>
    </include>
  </group>
</launch>
